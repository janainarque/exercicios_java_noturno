package principal;

import java.util.Scanner;

public class Program {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//classe scanner com o nome de leia (ctrl + shift + o  importa a classe)
		Scanner leia = new Scanner(System.in);
		
		int idade;
		double precoDaCamisa;
		String nome;
		char sexo;
		
		System.out.println("Entre com seu nome: ");
		nome = leia.nextLine(); //conjunto de caracteres/frases/nomes.
		
		System.out.println("Entre com o sexo: ");
		sexo = leia.next().charAt(0); //campo de caractere que 0 pega a primeira posição do caractere, caso seja outro número, vai pegar a posição do caractere desse número
		
		System.out.println("Entre com a sua idade: ");
		idade = leia.nextInt(); //números inteiros
		leia.nextLine();
		
		System.out.println("Entre com o preço da camisa: ");
		precoDaCamisa = leia.nextDouble(); //números quebrados
		System.out.println();
		
		
		System.out.println("Nome digitado " + nome);
		System.out.println("Sexo digitado " + sexo);
		System.out.println("Idade digitada " + idade);
		System.out.println("Valor da camisa digitado " + precoDaCamisa);
		
		
		leia.close();
		
		
	}

}
